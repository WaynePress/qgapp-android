<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.jzapp.videoapps.SplashActivity">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/x50"
        android:layout_marginRight="@dimen/x20"
        android:background="@drawable/shape_box_splash"
        android:gravity="center"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:textColor="@color/white"
        android:textSize="13sp" />


    <RelativeLayout
        android:id="@+id/ll_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:orientation="vertical"
        android:visibility="gone">


        <LinearLayout
            android:id="@+id/lltop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/x50"
            android:layout_marginRight="@dimen/x40"
            android:background="@drawable/shape_ebebeb_5"
            android:backgroundTint="#ddffffff"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x70"
                android:gravity="center"
                android:text="@string/splash_1"
                android:textColor="@color/c_EC72AD"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginTop="@dimen/x15"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginBottom="@dimen/x20"
                android:text="@string/splash_2"
                android:textColor="#111111"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x30"
                android:gravity="center"
                android:text="@string/splash_3"
                android:textColor="#333333"
                android:textSize="14sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_qrcode"
                android:layout_width="@dimen/x110"
                android:layout_height="@dimen/x110"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginBottom="@dimen/x40"
                android:src="@mipmap/head"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50"
                android:background="@drawable/shape_ebebeb_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cancle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/cancle"
                    android:textColor="@color/c_EC72AD"
                    android:textSize="22sp"
                    android:visibility="gone" />

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:background="#999"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/confirm2"
                    android:textColor="#276ac5"
                    android:textSize="22sp" />

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/splash_head" />

        <TextView
            android:id="@+id/tv_lx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lltop"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/yuanlx"
            android:padding="7dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="离线模式"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>