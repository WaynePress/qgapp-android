<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/statusbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x230"
                android:background="@color/c_EC72AD"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/x50"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_achievements"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/achievements"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView

                        android:id="@+id/tv_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x20"
                        android:text="@string/balance"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_marginTop="@dimen/x20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/x10"
                            android:text="@string/proxy_1"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_proxy_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x2"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/x1"
                        android:layout_height="@dimen/x60"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/x10"
                            android:text="@string/proxy_2"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_proxy_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x2"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/x1"
                        android:layout_height="@dimen/x60"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/x10"
                            android:text="@string/proxy_3"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_proxy_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x2"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/x1"
                        android:layout_height="@dimen/x60"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/x10"
                            android:text="@string/proxy_4"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_proxy_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x2"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/x20"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_returns_detailed"
                        android:layout_width="@dimen/x100"
                        android:layout_height="@dimen/x36"
                        android:background="@drawable/shape_ebebeb_5"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:text="@string/returns_detailed"
                        android:textColor="@color/c_EC72AD"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_withdrawal_record"
                        android:layout_width="@dimen/x100"
                        android:layout_height="@dimen/x36"
                        android:layout_marginLeft="@dimen/x20"
                        android:background="@drawable/shape_ebebeb_5"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:text="@string/withdrawal_record"
                        android:textColor="@color/c_EC72AD"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_my_list"
                    android:layout_weight="100"
                    android:drawableRight="@null"
                    android:text="@string/withdraw_deposit_way" />

                <TextView
                    android:id="@+id/tv_bink_card"
                    style="@style/text_my_list"
                    android:layout_width="wrap_content"
                    android:drawableRight="@drawable/ic_expand_more_black_24dp"
                    android:drawableTint="#A1A1A1"
                    android:text="@string/bink_card" />
            </LinearLayout>

            <include layout="@layout/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_my_list"
                    android:layout_weight="100"
                    android:drawableRight="@null"
                    android:text="@string/withdraw_deposit_charge" />

                <TextView
                    android:id="@+id/tv_withdraw_deposit_charge"
                    style="@style/text_my_list1"
                    android:layout_width="wrap_content"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/x15"
                    android:src="@drawable/ic_chevron_right_black_24dp"
                    android:visibility="invisible" />

            </LinearLayout>

            <include layout="@layout/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_my_list"
                    android:layout_weight="100"
                    android:drawableRight="@null"
                    android:text="@string/name_of_payee" />

                <EditText
                    android:id="@+id/tv_name_of_payee"
                    style="@style/text_my_list"
                    android:layout_width="wrap_content"
                    android:drawableRight="@null"
                    android:gravity="center|right"
                    android:hint="@string/input_name_of_payee"
                    android:lines="1"
                    android:maxEms="10"
                    android:textSize="18sp" />
            </LinearLayout>

            <include layout="@layout/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_my_list"
                    android:layout_weight="100"
                    android:drawableRight="@null"
                    android:text="@string/bank_card_id" />

                <EditText
                    android:id="@+id/tv_bank_id"
                    style="@style/text_my_list"
                    android:layout_width="wrap_content"
                    android:drawableRight="@null"
                    android:gravity="center|right"
                    android:hint="@string/input_bank_id"
                    android:inputType="number"
                    android:lines="1"
                    android:maxEms="10"
                    android:textSize="18sp" />
            </LinearLayout>

            <include layout="@layout/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_my_list"
                    android:layout_weight="100"
                    android:drawableRight="@null"
                    android:text="@string/withdraw_deposit_money" />

                <EditText
                    android:id="@+id/tv_money"
                    style="@style/text_my_list"
                    android:layout_width="wrap_content"
                    android:drawableRight="@null"
                    android:gravity="center|right"
                    android:hint="@string/input_withdraw_deposit_money"
                    android:inputType="number"
                    android:lines="1"
                    android:maxEms="10"
                    android:textSize="18sp" />
            </LinearLayout>

            <include layout="@layout/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_my_list"
                    android:layout_weight="100"
                    android:drawableRight="@null"
                    android:text="@string/security_code" />

                <EditText
                    android:id="@+id/tv_security_code"
                    style="@style/text_my_list"
                    android:layout_width="wrap_content"
                    android:drawableRight="@null"
                    android:gravity="center|right"
                    android:hint="@string/input_security_code"
                    android:inputType="number"
                    android:lines="1"
                    android:maxEms="10"
                    android:textSize="18sp" />
            </LinearLayout>

            <include layout="@layout/line" />

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/x50"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/x50"
                android:layout_marginTop="@dimen/x30"
                android:background="@drawable/shape_login"
                android:gravity="center"
                android:text="@string/submit_applications"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>